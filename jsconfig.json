{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noLib": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./",
    "rootDir": "./",
    "paths": {
      "~": ["./src"],
      "~/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
